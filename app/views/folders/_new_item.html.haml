%h3
  %span アイテムを追加する

= form_for item, :validate => true do |f|
  .field
    = f.hidden_field :folder_id
  .field
    = f.label :name, "アイテム名"
    .input
      = f.text_field :name
  .field
    = f.label :account, "アカウント"
    .input
      = f.text_field :account
  .field
    = f.label :password, "パスワード"
    .input
      = f.text_field :password
  .field
    = f.label :url, "URL"
    .input
      = f.text_area :url, :rows => 3
  .actions
    = f.submit '保存'
